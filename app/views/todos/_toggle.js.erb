$("#<%= dom_id(todo) %>")
  .toggleClass("completed", <%= todo.completed? %>)
  .find("input.todo-toggle")
  .prop("checked", <%= todo.completed? %>);

<% todo.sub_todos.each do |sub_todo| %>
  $("#<%= dom_id(sub_todo) %>")
    .toggleClass("completed", <%= sub_todo.completed? %>)
    .find("input.sub-todo-toggle")
    .prop("checked", <%= sub_todo.completed? %>);
<% end %>
